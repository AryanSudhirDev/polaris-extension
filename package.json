{
  "name": "polaris-extension",
  "displayName": "Polaris",
  "description": "AI-powered prompt workflow inside VS Code / Cursor.",
  "version": "1.0.3",
  "publisher": "aryansudhir",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "polaris.generatePrompt",
        "title": "Polaris: Generate Prompt"
      },
      {
        "command": "polaris.quickInsertPrompt",
        "title": "Polaris: Quick Insert Prompt"
      },
      {
        "command": "polaris.openPromptEditor",
        "title": "Polaris: New Prompt"
      },
      {
        "command": "polaris.account.signIn",
        "title": "Polaris: Sign In"
      },
      {
        "command": "polaris.account.signOut",
        "title": "Polaris: Sign Out"
      },
      {
        "command": "polaris.test",
        "title": "Polaris: Test Extension"
      },
      {
        "command": "polaris.testCodebase",
        "title": "Polaris: Test Codebase Analysis"
      },
      {
        "command": "polaris.showDebug",
        "title": "Polaris: Show Debug Output"
      },
      {
        "command": "polaris.testSystemSelection",
        "title": "Polaris: Test System-Wide Selection"
      }
    ],
    "keybindings": [
      {
        "command": "polaris.generatePrompt",
        "key": "shift+cmd+g"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "polaris",
          "title": "Polaris"
        }
      ]
    },
    "views": {
      "polaris": [
        {
          "id": "polarisPromptLibrary",
          "name": "Prompt Library"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Polaris Settings",
      "properties": {
        "polaris.apiBase": {
          "type": "string",
          "default": "https://api.openai.com",
          "description": "Base URL for Polaris API"
        },
        "polaris.insertMode": {
          "type": "string",
          "enum": [
            "replace",
            "below"
          ],
          "default": "below",
          "description": "Where to insert AI output"
        },
        "polaris.hotkey": {
          "type": "string",
          "default": "shift+alt+cmd+d",
          "description": "Override default hotkey for Generate Prompt"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@types/vscode": "^1.86",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  }
}
