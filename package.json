{
  "name": "promptr",
  "displayName": "Promptr",
  "description": "Transform text with AI inside VS Code. Select, hit ⌘⇧G, and watch your text transform.",
  "version": "1.1.6",
  "publisher": "aryansudhir",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "promptr.generatePrompt",
        "title": "Promptr: Generate Prompt"
      },
      {
        "command": "promptr.quickInsertPrompt",
        "title": "Promptr: Quick Insert Prompt"
      },
      {
        "command": "promptr.openPromptEditor",
        "title": "Promptr: New Prompt"
      },
      {
        "command": "promptr.setTemperature",
        "title": "Promptr: Set Temperature"
      },
      {
        "command": "promptr.setCustomContext",
        "title": "Promptr: Set Custom Context"
      },
      {
        "command": "promptr.showMenu",
        "title": "Promptr: Menu"
      }
    ],
    "keybindings": [
      {
        "command": "promptr.generatePrompt",
        "key": "shift+ctrl+g",
        "mac": "shift+cmd+g"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "promptr",
          "title": "Promptr"
        }
      ]
    },
    "views": {
      "promptr": [
        {
          "id": "promptrPromptLibrary",
          "name": "Prompt Library"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Promptr Settings",
      "properties": {
        "promptr.apiBase": {
          "type": "string",
          "default": "https://api.openai.com",
          "description": "Base URL for OpenAI API"
        },
        "promptr.insertMode": {
          "type": "string",
          "enum": [
            "replace",
            "below"
          ],
          "default": "below",
          "description": "Where to insert AI output"
        },
        "promptr.hotkey": {
          "type": "string",
          "default": "shift+alt+cmd+d",
          "description": "Override default hotkey for Generate Prompt"
        },
        "promptr.temperature": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.3,
          "description": "Temperature for AI model (0 = deterministic, 1 = very random)"
        },
        "promptr.customContext": {
          "type": "string",
          "default": "",
          "description": "Additional context to include in every AI prompt (e.g., project description, coding guidelines)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "package": "vsce package"
  },
  "dependencies": {
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "needle": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@types/vscode": "^1.86",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1"
  },
  "icon": "images/promptr-icon.png",
  "galleryBanner": {
    "color": "#7B5BFF",
    "theme": "dark"
  }
}
